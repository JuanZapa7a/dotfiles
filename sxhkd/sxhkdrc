#
# wm independent hotkeys
#

# terminal emulator
super + Return
  alacritty

super + shift + Return
  gnome-terminal

super + ctrl + Return
  urxvtc

super + alt + Return
  kitty

# screenshot (screen, window, area
Print
    scrot -e 'mv $f ~/Imágenes/'

super + Print
    scrot --focused -e 'mv $f ~/Imágenes/'

alt + Print
  scrot --line style=dash,width=3 --select --freeze --quality 100  -e 'mv $f ~/Imágenes/'

# program launcher
super + @space
    rofi -combi-modi drun,window,ssh -show combi -modi combi -matching fuzzy
	
super + d
    dmenu_run

super + Escape 
    rofi -modi run -show run

super +i 
    rofi -modi run -show drun -show-icons

super + Tab 
    rofi -show window -show-icons

# make sxhkd reload its configuration files:
super + c
	pkill -USR1 -x sxhkd

#Powermenu
super + p
    rofi -show power-menu -modi power-menu:rofi-power-menu -width 20
#rofi -show power-menu -modi power-menu:rofi-power-menu
# bspwm hotkeys

#brightness
XF86MonBrightness{Up,Down} 
    brightnessctl set 5%{+,-}

# volume 
XF86Audio{Raise,Lower}Volume 
    pulsemixer --change-volume {+,-}10
XF86AudioMute 
    pulsemixer --toggle-mute
XF86Audio{Play,Prev,Next}
	playerctl --player=vlc,spotify {play-pause,previous,next}
#

# quit/restart bspwr
super + shift + {x,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node/swap in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

super + {_,shift +} {Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + shift + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }n
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + alt + ctrl + {Left,Down,Up,Right}
	bspc desktop -f {prev,prev,next,next}.local

# focus the last node/desktop
super + ctrl + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + shift + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}
super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}


# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

super + alt + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

super + alt + shift + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}


# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
